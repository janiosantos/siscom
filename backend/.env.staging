# ==============================================================================
# STAGING/HOMOLOGAÇÃO ENVIRONMENT VARIABLES
# ==============================================================================
# IMPORTANTE: Renomeie este arquivo para .env e preencha com valores reais
# NUNCA commite este arquivo com valores sensíveis!
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================
APP_NAME="ERP Materiais de Construção - Staging"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=staging

# ==============================================================================
# DATABASE
# ==============================================================================
POSTGRES_DB=siscom_staging
POSTGRES_USER=siscom_staging
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE_123
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://siscom_staging:CHANGE_ME_STRONG_PASSWORD_HERE_123@postgres:5432/siscom_staging

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_456
REDIS_PORT=6379
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD_456@redis:6379/0

# ==============================================================================
# SECURITY
# ==============================================================================
# Gere uma chave secreta forte: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=CHANGE_ME_SECRET_KEY_789
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# CORS
# ==============================================================================
ALLOWED_ORIGINS=["https://staging.seudomain.com","https://api-staging.seudominio.com"]

# ==============================================================================
# FRONTEND
# ==============================================================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://api-staging.seudominio.com/api/v1

# ==============================================================================
# BACKEND
# ==============================================================================
BACKEND_PORT=8000

# ==============================================================================
# METABASE
# ==============================================================================
METABASE_PORT=3001

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
SENTRY_DSN=
LOG_LEVEL=info

# ==============================================================================
# INTEGRATIONS - MERCADO PAGO (SANDBOX)
# ==============================================================================
MERCADOPAGO_ACCESS_TOKEN=TEST-...
MERCADOPAGO_PUBLIC_KEY=TEST-...
MERCADOPAGO_WEBHOOK_SECRET=

# ==============================================================================
# INTEGRATIONS - PAGSEGURO (SANDBOX)
# ==============================================================================
PAGSEGURO_EMAIL=
PAGSEGURO_TOKEN=
