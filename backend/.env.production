# ==============================================================================
# PRODUCTION ENVIRONMENT VARIABLES
# ==============================================================================
# IMPORTANTE: Renomeie este arquivo para .env e preencha com valores reais
# NUNCA commite este arquivo com valores sensíveis!
# Use um gerenciador de secrets (AWS Secrets Manager, HashiCorp Vault, etc.)
# ==============================================================================

# ==============================================================================
# APPLICATION
# ==============================================================================
APP_NAME="ERP Materiais de Construção"
APP_VERSION="1.0.0"
DEBUG=false
ENVIRONMENT=production

# ==============================================================================
# DATABASE
# ==============================================================================
POSTGRES_DB=siscom_production
POSTGRES_USER=siscom_production
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE_PRODUCTION
POSTGRES_PORT=5432
DATABASE_URL=postgresql+asyncpg://siscom_production:CHANGE_ME_STRONG_PASSWORD_HERE_PRODUCTION@postgres:5432/siscom_production

# ==============================================================================
# REDIS
# ==============================================================================
REDIS_PASSWORD=CHANGE_ME_REDIS_PASSWORD_PRODUCTION
REDIS_PORT=6379
REDIS_URL=redis://:CHANGE_ME_REDIS_PASSWORD_PRODUCTION@redis:6379/0

# ==============================================================================
# SECURITY
# ==============================================================================
# Gere uma chave secreta MUITO forte: python -c "import secrets; print(secrets.token_urlsafe(64))"
SECRET_KEY=CHANGE_ME_SECRET_KEY_PRODUCTION_VERY_STRONG
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15  # Reduzido para produção
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==============================================================================
# CORS
# ==============================================================================
ALLOWED_ORIGINS=["https://seudominio.com","https://www.seudominio.com","https://api.seudominio.com"]

# ==============================================================================
# FRONTEND
# ==============================================================================
FRONTEND_PORT=3000
NEXT_PUBLIC_API_URL=https://api.seudominio.com/api/v1

# ==============================================================================
# BACKEND
# ==============================================================================
BACKEND_PORT=8000

# ==============================================================================
# METABASE
# ==============================================================================
METABASE_PORT=3001

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=warning

# ==============================================================================
# INTEGRATIONS - MERCADO PAGO (PRODUCTION)
# ==============================================================================
MERCADOPAGO_ACCESS_TOKEN=APP_USR-...
MERCADOPAGO_PUBLIC_KEY=APP_USR-...
MERCADOPAGO_WEBHOOK_SECRET=

# ==============================================================================
# INTEGRATIONS - PAGSEGURO (PRODUCTION)
# ==============================================================================
PAGSEGURO_EMAIL=
PAGSEGURO_TOKEN=
PAGSEGURO_SANDBOX=false

# ==============================================================================
# INTEGRATIONS - CORREIOS
# ==============================================================================
CORREIOS_CEP_USERNAME=
CORREIOS_CEP_PASSWORD=

# ==============================================================================
# INTEGRATIONS - MELHOR ENVIO (PRODUCTION)
# ==============================================================================
MELHOR_ENVIO_CLIENT_ID=
MELHOR_ENVIO_CLIENT_SECRET=
MELHOR_ENVIO_REFRESH_TOKEN=
MELHOR_ENVIO_SANDBOX=false

# ==============================================================================
# INTEGRATIONS - EMAIL (SENDGRID/AWS SES)
# ==============================================================================
EMAIL_PROVIDER=sendgrid
SENDGRID_API_KEY=
AWS_SES_ACCESS_KEY=
AWS_SES_SECRET_KEY=
AWS_SES_REGION=us-east-1

# ==============================================================================
# INTEGRATIONS - SMS/WHATSAPP (TWILIO)
# ==============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
TWILIO_WHATSAPP_NUMBER=

# ==============================================================================
# INTEGRATIONS - MERCADO LIVRE (PRODUCTION)
# ==============================================================================
MERCADOLIVRE_CLIENT_ID=
MERCADOLIVRE_CLIENT_SECRET=

# ==============================================================================
# NF-e/NFC-e SEFAZ (PRODUÇÃO)
# ==============================================================================
NFE_AMBIENTE=1  # 1=Produção, 2=Homologação
NFE_CERTIFICADO_PATH=/app/certificados/certificado_producao.pfx
NFE_CERTIFICADO_PASSWORD=
NFE_RAZAO_SOCIAL=SUA EMPRESA LTDA
NFE_CNPJ=12345678000190
NFE_INSCRICAO_ESTADUAL=123456789
NFE_REGIME_TRIBUTARIO=1  # 1=Simples Nacional, 2=Simples excesso, 3=Normal
NFE_UF=SP
NFE_MUNICIPIO_CODIGO=3550308  # Código IBGE da sua cidade

# ==============================================================================
# BACKUP
# ==============================================================================
BACKUP_RETENTION_DAYS=90
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_S3_BUCKET=siscom-backups-prod
BACKUP_S3_REGION=us-east-1

# ==============================================================================
# SSL/TLS CERTIFICATES
# ==============================================================================
SSL_CERTIFICATE_PATH=/etc/nginx/ssl/fullchain.pem
SSL_CERTIFICATE_KEY_PATH=/etc/nginx/ssl/privkey.pem

# ==============================================================================
# RATE LIMITING
# ==============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# CACHE
# ==============================================================================
CACHE_TTL_SECONDS=300
CACHE_MAX_SIZE_MB=256
